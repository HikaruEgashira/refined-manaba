{
  "manifest_version": 2,
  "version": "0.0.0",
  "name": "refined-manaba",
  "description": "üçå Browser extension that simplifies the manaba interface and adds useful features",
  "homepage_url": "https://github.com/HikaruEgashira/refined-manaba",
  "browser_action": {
    "default_icon": {
      "32": "favicon.ico"
    }
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.ts"],
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://manaba.tsukuba.ac.jp/*"],
      "js": ["content.ts"],
      "css": []
    }
  ],
  "web_accessible_resources": ["resolve_conflicts.ts"]
}
